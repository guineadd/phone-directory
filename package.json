{
  "name": "phone-directory",
  "version": "1.0.0",
  "description": "Directory containing internal telephone numbers",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel dev:*",
    "dev:server": "nodemon --env-file=.env src/server.js",
    "dev:client": "webpack --watch --config webpack.config.js",
    "tailwind": "tailwindcss -i public/styles/styles.css -o public/styles/tailwind.css",
    "tailwind-watch": "tailwindcss -i public/styles/styles.css -o public/styles/tailwind.css --watch",
    "test": "jest",
    "pretest": "eslint ."
  },
  "keywords": [
  ],
  "author": "A. Kalogeras, D. Kyprianou",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.0",
    "express": "^4.18.2",
    "jspdf": "^2.5.1",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-plugin-prettier": "^5.0.1",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "jsdom": "^23.2.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.1.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^6.1.1",
    "webpack-dev-server": "^4.15.1",
    "webpack-hot-middleware": "^2.25.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  }
}
